# CronBot Environment Configuration
# Copy this file to .env and configure as needed

# ═══════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════
POSTGRES_PASSWORD=cronbot

# ═══════════════════════════════════════════════════════════════
# MESSAGE QUEUE
# ═══════════════════════════════════════════════════════════════
RABBITMQ_PASSWORD=cronbot

# ═══════════════════════════════════════════════════════════════
# OBJECT STORAGE
# ═══════════════════════════════════════════════════════════════
MINIO_PASSWORD=cronbot123

# ═══════════════════════════════════════════════════════════════
# AGENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════
# Required: Your Anthropic API key (or compatible)
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic
ANTHROPIC_MODEL=glm-4.7
ANTHROPIC_MAX_TOKENS=4096

# Optional: Custom base URL for API (e.g., for proxies)
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# Agent autonomy level (0-3)
# 0: Reactive (read-only)
# 1: Cautious (approval on writes)
# 2: Balanced (default)
# 3: Full Autonomy
AUTONOMY_LEVEL=2
