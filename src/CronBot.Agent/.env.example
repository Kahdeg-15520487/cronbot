# CronBot Agent Environment Configuration

# Required: Project and Agent IDs
PROJECT_ID=00000000-0000-0000-0000-000000000001
AGENT_ID=00000000-0000-0000-0000-000000000001

# Autonomy level (0-3)
# 0: Reactive (read-only)
# 1: Cautious (approval on writes)
# 2: Balanced (approval on major changes) - DEFAULT
# 3: Full Autonomy (approval on security-critical only)
AUTONOMY_LEVEL=2

# Service URLs
MCP_REGISTRY_URL=http://cronbot-api:8080/api/mcp/registry
KANBAN_URL=http://cronbot-api:8080/api
GIT_URL=http://gitea:3000

# Paths
WORKSPACE_PATH=/workspace
SKILLS_PATH=/app/skills
AGENT_STATE_PATH=/agent-state

# Claude API
ANTHROPIC_API_KEY=your-api-key-here

# Token limits
MAX_TOKENS=200000

# Retry configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000
RETRY_BACKOFF_MULTIPLIER=2

# Logging
LOG_LEVEL=info
